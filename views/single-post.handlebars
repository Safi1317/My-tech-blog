<div class="post">
	<div class="card">
		<div class="card-header">
			<h3>{{post.title}}</h3>
			<div>posted by {{post.User.username}}</div>
		</div>
		<div class="card-body">
			{{post.content}}
		</div>
	</div>
	{{#if post.Comments}}
		<div class="card">
			<div class="card-header">
				<h3>Comments</h3>
			</div>
			<div class="card-body">
				{{#each post.Comments}}
					<div>
						<p>{{comment_text}}</p>
						<p> &mdash; {{User.username}}</p>
					</div>
				{{/each}}
			</div>
		</div>

	{{/if}}
	<form class="card" id="comment-form">
		<div class="card-header">
			<h3>Add Comment</h3>
		</div>
		<div class="card-body">
			<input type="hidden" name="post-id" value="{{post.id}}" />
			<label class="form-label" for="content">Comment</label>
			<textarea id="comment" name="content" class="form-input"></textarea>

			<button type="submit" class="btn">Submit</button>
		</div>

	</form>

</div>

<script src="/js/comment.js"></script>